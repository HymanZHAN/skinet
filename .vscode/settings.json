{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // "**/bin": true,
    "**/obj": true
  },
  "cSpell.words": [
    "Npgsql",
    "appuser",
    "skinet",
    "whsec"
  ],
  "deploy.reloaded": {
    "values": {
      "sshDir": {
        "type": "code",
        "code": "require('os').homedir() + '/.ssh/id_rsa'"
      }
    },

    "packages": [
      {
        "name": "Version 1.0.0",
        "description": "Package version 1.0.0",
        "files": ["publish/**"]
      }
    ],

    "targets": [
      {
        "type": "sftp",
        "name": "Linux",
        "description": "SFTP folder",

        "host": "167.172.252.152",
        "port": 22,
        "user": "root",
        "privateKey": "${sshDir}",

        "dir": "/var/www/skinet",
        "mappings": {
          "publish/**": "/"
        }
      }
    ]
  }
}
